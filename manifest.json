{
  "manifest_version": 3,
  "name": "Sentient Popup & Button (AutoPaste)",
  "version": "1.7", // Version updated
  "description": "Opens Sentient Chat, auto-pastes on command, shows button, supports /st & omnibox.",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "<all_urls>"  // <-- Required for /st and floating button
  ],
  "action": {
    "default_title": "Open/Focus Sentient Popup"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], // For floating button and /st listener
      "js": ["content.js"],
      "css": ["content.css"],
      "exclude_matches": ["https://chat.sentient.xyz/*"] // Don't run on chat page
    },
    {
      "matches": ["https://chat.sentient.xyz/*"], // Only for paste on chat page
      "js": ["sentient-paste.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/sentient-logo.png"], // For floating button logo
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "omnibox": {
    "keyword": "st"
  }
}
